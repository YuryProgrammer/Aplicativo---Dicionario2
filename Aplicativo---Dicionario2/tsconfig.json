{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",              
    "baseUrl": ".",                           
    "paths": {
      "@services/*": ["services/*"]          
    }
  },
  "include": ["app", "services"]             
}
